

<div class="ghemassages-all">
    <h2>Tổng số sản phẩm <%=response.count%></h2>
    <a href="/desktop/desktop-create">Thêm sản phẩm <i class="fa fa-plus"></i></a>
  <table class="table table-bordered table-admin">
    <thead>
      <tr>
        <th>Tên sản phẩm</th>
        <th>Tên seo</th>
        <th>NSX</th>
        <th>Giá</th>
        <th>Hình ảnh Default</th>
        <th>Hình ảnh thumb</th>
        <th>Sửa</th>
        <th>Xóa</th>
      </tr>
    </thead>
    <tbody>
      <% for(var i=0;i<response.count;i++){ %>
        <tr>
        <td> <%=response.desktops[i].name %> </td>
          <td> <%=response.desktops[i].nameseo %> </td>
        <td> <%=response.desktops[i].nsx %> </td>
        <td> <%=response.desktops[i].price %> </td>
        <td class="image-response">
          <%for(var n=0;n<response.desktops[i].imagedefault.length;n++){%>
          <img src="/assest/image/<%=response.desktops[i].imagedefault[n].originalname%>"width="50" />
          <%}%>
        </td>
        <td class="image-response">
          <%for(var k=0;k<response.desktops[i].image.length;k++){%>
          <img src="/assest/image/<%=response.desktops[i].image[k].originalname%>" width="50"/>
          <%}%>
        </td>
        <td><a href="/desktop/edit/<%=response.desktops[i]._id %>">Sửa</a></td>
        <td><a class="delete-desktop" data-id="<%=response.desktops[i]._id %>">Xóa</a></td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>
